{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./dist/esm",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src"
  ],
  "lib": [
    "es6",
    "dom"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "devDependencies": {
    "typescript": "^3.0.0"
  },
  "publishConfig": {
    "registry": "https://github.com/jerome-jutteau/osc-sdk-js"
  }
}