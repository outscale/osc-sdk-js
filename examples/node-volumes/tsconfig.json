{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "declaration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
